<struts-config>
	<form-beans>
		<form-bean name="stud" type="Beans.Student">
		</form-bean>
        </form-beans>
        
<action-mappings>

		 <action path="/studcrud" name="stud" 
			type="Controller.StudController" input="/reg.jsp" parameter="submit" >
			<forward name="success" path="/success.jsp" />
			<forward name="save" path="/reg.jsp" />
			<forward name="search" path="/findAll.jsp" />
			<forward name="findAll" path="/findAll.jsp" /> 
			<forward name="failreg" path ="/reg.jsp"/>
	 </action>
	 
	 <action path="/returnupdatedelete" type="Controller.SelectAction" name="stud" >
			<forward name="updatedelete" path="/updatedelete.jsp" > </forward>
		</action>
		
		<action path="/pagination" type="Controller.findallpaginationcontroller" name="stud" >
		<forward name="success" path="/success.jsp" />
		<forward name="findAll" path="/findAll.jsp" />
			<forward name="updatedelete" path="/updatedelete.jsp" > </forward>
		</action>
		
	</action-mappings>
	<!-- Validator Configuration -->
	
	<message-resources parameter="resources/Messages"></message-resources>
	
<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
	<set-property property="pathnames"
		value="/WEB-INF/validator-rules.xml,
				/WEB-INF/validation.xml" />
</plug-in> 
</struts-config>
